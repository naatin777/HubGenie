{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "\\.ts$",
        "\\.tsx$",
        "deno\\.json$",
        "deno\\.jsonc$"
      ],
      "matchStrings": [
        "\"(?<depName>https:?//deno\\.land/(?:std|x)/.+?)@(?<currentValue>[^/\" ]+)\""
      ],
      "datasourceTemplate": "deno"
    },
    {
      "fileMatch": [
        "\\.ts$",
        "\\.tsx$",
        "deno\\.json$",
        "deno\\.jsonc$"
      ],
      "matchStrings": [
        "\"jsr:(?<depName>@.+?/.+?)@(?<currentValue>[\\^~]?\\d+\\.\\d+\\.\\d+.*?)\""
      ],
      "datasourceTemplate": "jsr"
    },
    {
      "fileMatch": [
        "\\.ts$",
        "\\.tsx$",
        "deno\\.json$",
        "deno\\.jsonc$"
      ],
      "matchStrings": [
        "\"npm:(?<depName>.+?)@(?<currentValue>[\\^~]?\\d+\\.\\d+\\.\\d+.*?)\""
      ],
      "datasourceTemplate": "npm"
    }
  ]
}
